@model IEnumerable<BanSach.Models.DonHangCT>

@{
    ViewBag.Title = "Quản lý chi tiết đơn hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .tieude {
        background-color: darkcyan;
        border-radius: 10px;
        text-align: center;
        font-weight: bold;
        color: white;
        margin: 10px 10px 20px 10px;
        padding: 5px;
    }

    .them a {
        border-radius: 10px;
        background-color: darkcyan;
        color: white;
        font-size: large;
        padding: 5px;
        margin: 50px 10px 0 10px;
    }

        .them a:hover {
            text-decoration: none;
            color: white;
            background-color: #027171;
        }

    .table-striped {
        width: 100%;
    }
</style>

<h2 class="tieude">Chi tiết các đơn hàng </h2>

<table class="table table-striped">
    <tr style="background-color: steelblue; color: lightcyan; text-align: center;">
        <th style="border-top-left-radius: 25px;"> Đơn hàng </th>
        <th>  Khách hàng  </th>
        <th>  Sản phẩm </th>
        <th> Số lượng  </th>
        <th> Giá  </th
        <th style="border-top-right-radius: 25px;"></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>  @Html.DisplayFor(modelItem => item.IDDonHang) </td>
            <td>  @Html.DisplayFor(modelItem => item.DonHang.KhachHang.TenKH) </td>
            <td>  @Html.DisplayFor(modelItem => item.SanPham.TenSP)   </td>
            <td>  @Html.DisplayFor(modelItem => item.SoLuong) </td>
            <td>  @Html.DisplayFor(modelItem => item.Gia)     </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.IDdh }) |
                @Html.ActionLink("Xem", "Details", new { id = item.IDdh }) |
                @Html.ActionLink("Xoá", "Delete", new { id = item.IDdh })
            </td>
        </tr>
    }
</table>
