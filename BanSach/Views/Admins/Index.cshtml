@model IEnumerable<BanSach.Models.Admin>

@{
    ViewBag.Title = "Quản lý nhân sự";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>
    .tieude {
        background-color:#f97f15;
        border-radius: 10px;
        text-align: center;
        font-weight: bold;
        color: white;
        margin: 10px 10px 20px 10px;
        padding: 5px;
    }

    .them a {
        border-radius: 10px;
        background-color:#f79c61;
        color: white;
        font-size: large;
        padding: 5px;
        margin: 50px 10px 0 10px;
    }

        .them a:hover {
            text-decoration: none;
            color: white;
            background-color: #cc8151;
        }

    .table {
        width:100%;
       
    }   
</style>

<h2 class="tieude">Quản lý Nhân sự</h2>

<p class="them">
    @Html.ActionLink("Thêm nhân viên", "Create")

</p>

<table class="table table-striped">
    <tr style="background-color: steelblue; color: lightcyan; text-align: left;">
        <th style="border-top-left-radius: 25px">    ID  </th>
        <th>   Họ tên   </th>
        <th>   Email    </th>
        <th>   Địa chỉ  </th>
        <th> Số điện thoại    </th>
        <th> Vai trò  </th>
        <th>    Tài khoản     </th>
        <th>       Mật khẩu   </th>
        <th style="border-top-right-radius: 25px;"></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>    @Html.DisplayFor(modelItem => item.ID)   </td>
            <td>    @Html.DisplayFor(modelItem => item.HoTen)   </td>
            <td>   @Html.DisplayFor(modelItem => item.Email) </td>
            <td>  @Html.DisplayFor(modelItem => item.DiaChi)   </td>
            <td>    @Html.DisplayFor(modelItem => item.SoDT)  </td>
            <td> @Html.DisplayFor(modelItem => item.VaiTro)  </td>
            <td>  @Html.DisplayFor(modelItem => item.TKhoan) </td>
            <td>    @Html.DisplayFor(modelItem => item.MKhau) </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Xoá", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
</table>


















