@model BanSach.Models.KhachHang

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        color: #999;
        background: #f3f3f3;
        font-family: 'Poppins', sans-serif;
    }

    .form-control {
        border-color: #eee;
        min-height: 41px;
        box-shadow: none !important;
        margin-left: 3%;
    }

        .form-control:focus {
            border: 3px solid #5cd3b4;
        }

    .form-control, .btn {
        border-radius: 7px;
    }

    .form-horizontal {
        width: 500px;
        margin: 5% auto;
        padding: 30px 0;
    }

        .form-horizontal h2 {
            color: #333;
            margin: 0 0 30px 30%;
            display: inline-block;
            padding: 0 30px 10px 30px;
            border-bottom: 3px solid #5cd3b4;
        }

    #dangky {
        margin-left:30%;
    }

    .form-horizontal {
        color: #999;
        border-radius: 10px;
        margin-bottom: 15px;
        background: #fff;
        box-shadow: 2px 2px 2px 2px rgba(0, 0, 0, 0.3);
        padding: 30px;
    }

        .form-horizontal .form-group {
            margin-bottom: 20px;
        }

        .form-horizontal label {
            font-weight: normal;
            font-size: 15px;
            color: black;
        }


        .form-horizontal .btn {
            font-size: 16px;
            font-weight: bold;
            background: #5cd3b4;
            border: none;
            margin-top: 20px;
            min-width: 140px;
            color:white;
        }

            .form-horizontal .btn:hover, .form-horizontal .btn:focus {
                background: #41cba9;
                outline: none !important;
            }

        .form-horizontal a {
            color: #5cd3b4;
            text-decoration: underline;
        }

            .form-horizontal a:hover {
                text-decoration: none;
            }

        .form-horizontal form a {
            color: #5cd3b4;
            text-decoration: none;
        }

            .form-horizontal form a:hover {
                text-decoration: underline;
            }
            .control-label{
                color:black;    
            }
</style>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h2>Đăng ký</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="control-label col-md-10"> Tên </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-10"> Số điện thoại </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SoDT, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SoDT, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-10"> Email </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-10"> Tài khoản </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TKhoan, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TKhoan, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-10"> Mật khẩu </div>
        <div class="col-md-10">
            
            <input type="password" class="form-control" name="MKhau" id="MKhau"/>
            @Html.ValidationMessageFor(model => model.MKhau, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" id=dangky>
            <input type="submit" value="Đăng ký" class="btn btn-default" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
